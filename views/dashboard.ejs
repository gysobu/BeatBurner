<!doctype html>
<html lang="en-US">

<% include partials/head.ejs %>

<body>
    <div class="containerDashboard">
        <!-- Header Title -->
        <header class="header">
            <h1>Dashboard</h1>
        </header>
        <div class="content">
            <div class="row">
                <article class="col-md-9">
                    <!-- Start Login Form -->
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <form>
                                <!-- Form Title -->
                               <span> <div class="total-calories-text">
                                    Total Calories
                                </div>
                               <a href="/update"><i class="fa fa-gear fa-spin spinner" style="font-size:130px;color:green"></i> </a>
                            </span>
                                <!-- USER INFO -->
                                <div class="user-name">
                                    USERNAME:
                                    <%= username %>
                                </div>
                                <div class="user-age">
                                    AGE:
                                    <%= userage %>
                                </div>
                                <!-- USER WEIGHT PROGRESS -->
                                <div class="row">
                                    <div class="col-md-6">
                                        START LBS:
                                        <%= userweight %>
                                    </div>
                                    <div class="col-md-6">
                                        CURRENT LBS:
                                        <%= userweight %>
                                    </div>
                                </div>
                                <!-- PLAYLIST OPTIONS -->
                                <div class="col-md-10">
                                    <div class="playlist-options">
                                        <button type="button" onclick="location.href='/warmup'" class="warm-up">Warm Up</button>
                                        <button type="button" onclick="location.href='/easy'" class="easy">Easy</button>
                                        <button type="button" onclick="location.href='/medium'" class="medium">Medium</button>
                                        <button type="button" onclick="location.href='/hard'" class="hard">Hard</button>
                                        <br>
                                        <br>
                                        <button type="button" onclick="location.href='/logout'">Log Out</button>
                                        
                                    </div>
                                </div>
                            </form>
                        </div>
            <div class="row" style="display: flex; justify-content: center">
                <div class="total-calories-text">
                    Total Calories
                </div>
            </div>
                <!-- USER INFO -->
            <div class="row" style="display: flex; justify-content: center">
                <div class="user-name">
                    USERNAME
                </div>
            </div>
            <div class="row" style="display: flex; justify-content: center">
                <div class="user-age">
                    AGE
                </div>
            </div>
                <!-- USER WEIGHT PROGRESS -->
                <div class="row" style="display: flex; justify-content: center">
                    <div class="col-md-1">
                        START LBS
                    </div>
                    <div class="col-md-1">
                        CURRENT LBS
                    </div>
                </div>
