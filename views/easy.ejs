<!doctype html>
<html lang="en-US">

<% include partials/head.ejs %>

<body>
    <div class="containerPlaylist" style="overflow-y: scroll; height:400px">
            <button type="button" onclick="location.href='/dashboard'" class="dashboard"> Dashboard </button>
        <!-- Header Title -->
        <header class="headerMedium">
            <p>Easy</p>
        </header>

        <h1 style="color: white;"><%= totalCalories %></h1>
        <div class="row">
            <div class="col">
                <table class="playlist">
                    <tr style="text-align: center">
                        <th>TITLE</th>
                        <th>ARTIST</th>
                        <th>DURATION</th>
                        <th>BPM</th>
                        <th>CALORIES</th>
                    </tr>
                    <% var index = 0; %>
                    <% easyplaylist.forEach((element)=>{%>
                        
                    <tr>
                        <td>
                            <%= element.title %>
                        </td>
                        <td style="text-align: center">
                            <%= element.artistname %>
                        </td>
                        <td style="text-align: center">
                            <%= element.duration %>
                        </td>
                        <td style="text-align: center">
                            <%= element.bpm %>
                        </td>
                        <td style="text-align: center">
                            <%= caloriesPerSong[index] %>    
                        </td>
                        <% index++ %>
                        <% }) %>
                    </tr>
                    
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12" style="margin-bottom: 20px;">
                <button class="mediumButton" onclick=" window.open('https://open.spotify.com/playlist/3z1O1cHDYZeRPDOGboJuaM','_blank')">
                    PLAY</button>
            </div>
        </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <% include partials/scripts.ejs %>

</body>

</html>




